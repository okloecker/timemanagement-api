{
  "extends": ["mourner", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "indent": ["warn", 2],
    "no-undef": "error",
    "no-shadow": "error",
    "quotes": ["error", "double", { "allowTemplateLiterals": true }],
    "no-unused-vars": ["warn", { "args": "none" }],
    "no-return-await": ["off"]
  }
}
